@model knowLib.Models.Avaliacao

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Avaliação</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Detalhes da Avaliação</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.Nota, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Nota, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nota, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.DataAvaliacao, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.DataAvaliacao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataAvaliacao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.UsuarioId, "Usuário", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.DropDownList("UsuarioId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UsuarioId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.EbookId, "E-book", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.DropDownList("EbookId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.EbookId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.ArtigoId, "Artigo", htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.DropDownList("ArtigoId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ArtigoId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary mr-2">Salvar</button>
                        @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
