@model IEnumerable<knowLib.Models.Ebook>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}
<div class="container mt-4">
    <h2 class="mb-4">Lista de Ebooks</h2>

    <p>
        @Html.ActionLink("Criar Novo Ebook", "Create", null, new { @class = "btn btn-primary mb-3" })
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Titulo)</th>
                <th>@Html.DisplayNameFor(model => model.Resumo)</th>
                <th>@Html.DisplayNameFor(model => model.ISBN)</th>
                <th>@Html.DisplayNameFor(model => model.Arquivo)</th>
                <th>@Html.DisplayNameFor(model => model.DataPublicacao)</th>
                <th>@Html.DisplayNameFor(model => model.NumeroPaginas)</th>
                <th>@Html.DisplayNameFor(model => model.Idioma)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Titulo)</td>
                    <td>@Html.DisplayFor(modelItem => item.Resumo)</td>
                    <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                    <td>@Html.DisplayFor(modelItem => item.Arquivo)</td>
                    <td>@Html.DisplayFor(modelItem => item.DataPublicacao)</td>
                    <td>@Html.DisplayFor(modelItem => item.NumeroPaginas)</td>
                    <td>@Html.DisplayFor(modelItem => item.Idioma)</td>
                    <td class="text-nowrap">
                        @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-info mr-1" })
                        @Html.ActionLink("Detalhes", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-secondary mr-1" })
                        @Html.ActionLink("Excluir", "Delete", new { id = item.Id }, new { @class = "btn btn-sm btn-danger" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>