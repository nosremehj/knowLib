
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}


<div class="container mt-4">
    <!-- Boas-vindas -->
    <div class="jumbotron text-center bg-primary text-white">
        <h2>Bem-vindo</h2>
        <p class="lead">Estamos felizes em tê-lo de volta.</p>
    </div>

    <!-- Recomendações e Atualizações -->
    <div class="row">
        <!-- Recomendações para o Usuário -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">Recomendações para Você</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item"><a href="/ebooks/titulo-1">E-book: <strong>Título do E-book</strong></a></li>
                        <li class="list-group-item"><a href="/artigos/titulo-2">Artigo: <strong>Título do Artigo</strong></a></li>
                        <!-- Continue listando recomendações -->
                    </ul>
                </div>
            </div>
        </div>

        <!-- Atualizações Recentes -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h5 class="card-title mb-0">Atualizações Recentes</h5>
                </div>
                <div class="card-body">
                    <p>Confira as novidades na plataforma e os conteúdos adicionados recentemente!</p>
                    <a href="/atualizacoes" class="btn btn-warning btn-sm">Ver Todas as Atualizações</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Progresso do Usuário -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Progresso</h5>
                </div>
                <div class="card-body">
                    <p>Você concluiu <strong>70%</strong> dos conteúdos salvos.</p>
                    <div class="progress">
                        <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 70%" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100">
                            70%
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

