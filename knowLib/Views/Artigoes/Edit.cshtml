@model knowLib.Models.Artigo

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Artigo</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
