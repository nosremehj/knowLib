                <hr />

                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-4">
                    @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-4">
                    @Html.LabelFor(model => model.Resumo, htmlAttributes: new { @class = "col-sm-2 col-form-label" })
