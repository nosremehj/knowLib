@model knowLib.Models.Categoria

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Editar Categoria</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="card">
            <div class="card-body">
                <h4 class="card-title mb-4">Detalhes da Categoria</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger mb-4" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mb-3">
                    @Html.LabelFor(model => model.Icone, htmlAttributes: new { @class = "col-sm-2 col-form-label font-weight-bold" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Icone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Icone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row mt-4">
                    <div class="col-sm-10 offset-sm-2">
                        <button type="submit" class="btn btn-primary mr-2">Salvar</button>
                        @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>