@model knowLib.Models.Categoria

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutGerente.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Excluir Categoria</h2>

    <div class="alert alert-danger">
        <h4>Tem certeza de que deseja excluir esta categoria?</h4>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Detalhes da Categoria</h5>
            <hr />

            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>

                <dt class="col-sm-3 font-weight-bold">@Html.DisplayNameFor(model => model.Icone)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Icone)</dd>
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="mt-4">
                    <button type="submit" class="btn btn-danger mr-2">Excluir</button>
                    @Html.ActionLink("Voltar para Lista", "Index", null, new { @class = "btn btn-secondary" })
                </div>
            }
        </div>
    </div>
</div>